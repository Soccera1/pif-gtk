# Check if running as root
if [ "$EUID" -ne 0 ]; then
    echo "Please run as root"
    exit 1
fi

# Get the directory of the script
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Copy the binary
cp "$SCRIPT_DIR/pif" /usr/local/bin/
chmod +x /usr/local/bin/pif

# Copy the service file
cp "$SCRIPT_DIR/pif-notify.service" /etc/systemd/system/

# Reload systemd
systemctl daemon-reload

# Enable and start the service for the current user
systemctl enable --now pif-notify.service
systemctl enable --now pif-notify.timer

echo "PIF Song Rotation Service has been installed and enabled."
echo "The service will run daily to show you which songs to practice."